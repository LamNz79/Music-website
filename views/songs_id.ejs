<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
		integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Admin - Song</title>

    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>

<body>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Song</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <% data.forEach(element=>{ %>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Name</th>
                            <th>Author</th>
                            <th style="width: 5%">Images Path</th>
                            <th style="width: 5%">Music Path</th>
                            <th style="width: 10%">Action</th>

                        </tr>
                    </thead>
                    <tbody id="UsersList">

                            <tr>
                                <td>
                                    <label for="" id="songId">
                                        <%=element._id%>
                                    </label>
                                </td>
                                <td>
                                    <input type="text" name="" id="songName" value="<%=element.name%>">
                                </td>
                                <td>
                                    <input type="text" name="" id="author" value="<%=element.author%>">
                                </td>
                                <td>
                                    <input type="file" accept="image/*" name="" id="songImage" value="<%=element.image%>">
                                </td>
                                <td>
                                    <input type="file" accept="audio/*"  name="" id="songLink" value="<%=element.link%>">
                                </td>

                                <td>
                                    <button class="btn btn-primary fa-2x"
                                        onclick="adminUpdateSong()"><i class="fas fa-save"></i></button>
                                </td>
                            </tr>

                    </tbody>
                </table>
                <%})%>

            </div>



        </div>
    </div>  
</div>

    <script>
        function adminUpdateSong() {
            var songId = ($('#songId').text())
            var songName = ($('#songName').val())
            var songAuthor = String($("#author").val())
            var songLink = $('#songLink').val().split('\\').pop();
            var songImage = $('#songImage').val().split('\\').pop();
            $.post('../updateSongUsingId', {
                songId: songId,
                songName: songName,
                songAuthor: songAuthor,
                songLink: songLink,
                songImage: songImage
            }, (data, status) => {
                alert('Sửa đổi thành công!')
                window.close()

            })
        }
    </script>
</body>

</html>