<div class="player-controls clickable">
    <div class="level player-controls__container">
        <div class="player-controls-left level-left">
            <div class="level-item is-narrow">
                <div class="media">
                    <div class="media-left" style="float: left;">
                        <div class="thumb-overlay">
                            <img id="songicon1" src="/images/songicon1.png" style="animation-play-state: paused;">
                            <img id="songicon2" src="/images/songicon2.png" style="animation-play-state: paused;">
                            <figure class="image is-50x50 is-rounded" style="animation-play-state: paused;">
                                <img id="footer_song_icon" src="/images/anthan.jpg" alt="">
                            </figure>
                        </div>
                        <div class="card-info">
                            <div class="title-wrapper">
                                <span class="item-title title" id="footer_song_name">An Thần</span>
                            </div>
                            <div class="subtitle">
                                <i class="fas fa-music"></i>
                                <a href="http://wwww.facebook.com/quangmanuel" id="footer_song_author">(ft.Thắng), LOW
                                    G, Rap Nhà Làm</a>
                            </div>
                        </div>

                        <div class="fav-music">
                            <i class="far fa-heart" id="fav-no" onclick="addFavMusic()" title="Thêm vào yêu thích"></i>
                            <i class="fas fa-heart" id="fav-yes" onclick="delFavMusic()" title="Hủy bỏ yêu thích"
                                style="display:none;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="player-controls__player-bar level-center">
            <div class="level-item player">
                <div class="actions buttons">
                    <i class="fas fa-random"></i>
                    <div class="prev-track" onclick="prevTrack()"><i class="fas fa-step-backward"></i></div>
                    <div class="playpause-track" onclick="playpauseTrack()"><i class="far fa-play-circle fa-2x"></i>
                    </div>
                    <div class="next-track" onclick="nextTrack()"><i class="fas fa-step-forward"></i></div>
                    <i class="fas fa-retweet"></i>
                </div>
            </div>

            <div class="level-item mar-b-5">
                <span class="current-time time-left">00:00</span>
                <div class="zm-duration-bar" style="display: flex; justify-content: center;">
                    <input type="range" min="1" max="100" value="0" class="seek_slider" onchange="seekTo()">
                </div>
                <span class=" total-duration time-right" style="text-align: right;">00:00</span>

            </div>
        </div>

        <div class="player-controls-right level-right">
            <div class="volume-control">
                <i class="fab fa-youtube" title="Xem MV" style="width: 30px; " onclick="showMV()"></i>
                <i class="fa fa-volume-up" title="Âm lượng" style="width: 30px; "></i>
                <input type="range" min="1" max="100" value="99" class="volume_slider" onchange="setVolume()">
            </div>
        </div>
    </div>
</div>
<div class="background-mv">
    <div class="layer-header-top">
        <div class="header-top">
            <img src="/images/logo.png" alt="">
            <h3 style="color: white;">PARTY AT HOME</h3>
        </div>
        <div class="toggle-layer">
            <div class="layer-control">
                <div class="circle-icon" title='Đóng cửa sổ'>
                    <div class="" onclick="hiddenMV()"><i class="fas fa-chevron-down"></i></div>
                </div>
                <div class="circle-icon" title='Cài đặt'>
                    <div class="" onclick=""><i class="fas fa-cog"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="layer-middle">
        <iframe id="player-frame" src="https://www.youtube.com/embed/J7eYhM6wXPo" title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
    </div>

    <div class="layer-mv">
        <img src="/images/blur-background.jpg" alt="">
    </div>
</div>
<script src="/js/music.js"></script>