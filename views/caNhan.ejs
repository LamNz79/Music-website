<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body>

    <div class="container-sm">
        <%- include('./partials/header'); %>
            <div class="app-top-right_top-bt">
                <div class="puser-info">
                    <input type="file" name="image" id="image" accept="image/*" style="display: none;"/>
                    <div id="preview">
                    <div class="user-avt" id="avatar" style="border: 0px;"><img id="user_ava"></div>
                    <button
                        id="upload-button"
                        aria-labelledby="image"
                        aria-describedby="image"
                        title="Upload image"
                    >
                    <i class="fas fa-arrow-up"></i>
                    </button>
                    </div>
                    <div class="user-info-list">
                        <!-- <div class="user-avt"><img id="user_ava" src="/images/quangne.png" alt=""></div> -->
                        <h2 id="shownName">Đăng Quang</i></h2>
                    </div>
                    <div class="changeInfo">
                        <button class="changeName" style="display: flex; justify-content: center;" onclick="window.open('/nameChange', 
                        'newwindow', 
                        'width=500,height=600');"><i class="fas fa-edit" style="font-size: 1em; width: 20px; padding: 7px 0;"></i><p style="padding: 6px 0; margin: 0;">Đổi tên hiển thị</p></button>
                        <button class="changePassword" style="display: flex; justify-content: center;" onclick="window.open('/passwordChange', 
                        'newwindow', 
                        'width=500,height=700');"><i class="fas fa-lock" style="font-size: 1em; width: 20px; padding: 7px 0;"></i><p style="padding: 6px 0; margin: 0;">Đổi mật khẩu</p></button>
                    </div>
                </div>
            </div>

            <div class="app-top-right_bottom">
                <div class="box-nav-items">
                    <div class="nav-items">
                        <div class="nav-item active2">TỔNG QUAN</div>
                    </div>
                </div>

                <div class="box-allmusic">
                    <div class="tablist active2">
                        <div class="box-music-content">
                            <div class="box-music-content-t">
                                <div class="textnamemusic">Bài hát</div>
                                <div class="buttonmusic">
                                    <div class="buttonplayall">
                                        <i class="fas fa-play" style="width: 30px;"></i>
                                        Phát tất cả
                                    </div>
                                </div>
                            </div>

                            <div class="box-music-content-b">
                                <div class="image-musicplay">
                                    <img src="/images/honey-umie.jpg" alt="">
                                </div>
                                <div class="list song-list-select">

                                    <%dataSong.forEach(element=> {%>
                                        <%element.songCollection.forEach(song=> {%>
                                            <div class="select-item"
                                                onclick="loadTrackTest(playSelectedSong(getData(<%= JSON.stringify(song)%>)))">
                                                <div class="list-item bor-b-1 media-item active" tabindex="0">
                                                    <div class="media">
                                                        <div class="media-left">
                                                            <div class="song-thumb">
                                                                <figure class="image is-40x40"
                                                                    title="Anh Không Nói Điêu">
                                                                    <img src="<%=song.image%>" alt="">
                                                                </figure>
                                                            </div>
                                                            <div class="card-info">
                                                                <div class="title-wrapper">
                                                                    <span class="item-title title">
                                                                        <%=song.name%>
                                                                    </span>
                                                                </div>
                                                                <div class="subtitle">
                                                                    <i class="fas fa-music"></i>
                                                                    <a href="">
                                                                        <%=song.author%>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="media-content">
                                                            3:02
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <%});%>
                                                <%});%>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <footer>
        <%- include('./partials/footer'); %>
    </footer>
    </div>
    <script>
        $(document).ready(function () {

            var objUser = JSON.parse(localStorage.getItem("user"))
            document.getElementById("user_ava").src = `/${objUser[0].images}`
            document.getElementById("shownName").innerHTML = `${objUser[0].showName}`
        })
    </script>
    <script src="/js/music.js"></script>
    <script src="/js/avataruser.js"></script>
</body>

</html>